<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/request_friend_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/request_friend_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"></ImageView>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/request_friend_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="사용자ID"
            android:gravity="center"
            tools:textSize="12pt" />

        <TextView
            android:id="@+id/request_friend_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_marginTop="5dp"
            tools:text="요청 날짜"
            android:gravity="center"
            tools:textSize="10pt"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/request_friend_accept_confirm"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/signature"
            android:text="수락"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/request_friend_denied_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E1F00000"
            android:layout_marginLeft="5dp"
            android:text="거절"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>